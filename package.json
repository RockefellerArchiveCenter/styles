{
  "name": "rac-styles",
  "version": "0.1.0",
  "description": "rac style library",
  "repository": "https://github.com/RockefellerArchiveCenter/styles.git",
  "license": "MIT",
  "main": "index.js",
  "dependencies": {
    "autoprefixer": "^10.4.8",
    "jest": "^28.1.3",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "pre-commit": "^1.2.2",
    "sass-true": "^6.1.0",
    "stylelint": "^14.10.0",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard": "^27.0.0"
  },
  "pre-commit": [
    "lint"
  ],
  "scripts": {
    "start": "react-scripts start --openssl-legacy-provider",
    "compile": "sass stylesheets/main.scss dist/main.min.css --no-source-map --style=compressed && postcss dist/main.min.css --replace --use autoprefixer",
    "lint": "npx stylelint 'stylesheets/**/*.scss'",
    "lint-fix": "npx stylelint 'stylesheets/**/*.scss' --fix",
    "test": "jest --testRegex test_ --env=node --passWithNoTests",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "browserslist": [
    "> 2%"
  ],
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@storybook/addon-a11y": "^6.5.10",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-docs": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/html": "^6.5.10",
    "@storybook/preset-scss": "^1.0.3",
    "@whitespace/storybook-addon-html": "^5.0.0",
    "babel-loader": "^8.2.5",
    "css-loader": "^5.2.6",
    "handlebars": "^4.7.7",
    "handlebars-loader": "^1.7.2",
    "sass": "^1.54.4",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0"
  }
}
