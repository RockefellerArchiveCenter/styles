{
  "name": "rac-styles",
  "version": "0.1.0",
  "description": "rac style library",
  "repository": "https://github.com/RockefellerArchiveCenter/styles.git",
  "license": "MIT",
  "main": "index.js",
  "dependencies": {
    "autoprefixer": "^10.2.5",
    "jest": "^26.6.3",
    "postcss": "^8.2.9",
    "postcss-cli": "^8.3.1",
    "pre-commit": "^1.2.2",
    "sass-true": "^6.0.1",
    "stylelint": "^13.12.0",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^21.0.0"
  },
  "pre-commit": [
    "lint"
  ],
  "scripts": {
    "compile": "sass stylesheets/main.scss dist/main.min.css --no-source-map --style=compressed && postcss dist/main.min.css --replace --use autoprefixer",
    "lint": "npx stylelint 'stylesheets/**/*.scss'",
    "lint-fix": "npx stylelint 'stylesheets/**/*.scss' --fix",
    "test": "jest --testRegex test_ --env=node --passWithNoTests",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "browserslist": [
    "> 2%"
  ],
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@storybook/addon-a11y": "^6.2.8",
    "@storybook/addon-actions": "^6.2.8",
    "@storybook/addon-docs": "^6.2.8",
    "@storybook/addon-essentials": "^6.2.8",
    "@storybook/addon-links": "^6.2.8",
    "@storybook/html": "^6.2.8",
    "@storybook/preset-scss": "^1.0.3",
    "@whitespace/storybook-addon-html": "^5.0.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.2",
    "handlebars": "^4.7.7",
    "handlebars-loader": "^1.7.1",
    "sass": "^1.32.8",
    "sass-loader": "^10.0.1",
    "style-loader": "^2.0.0"
  }
}
